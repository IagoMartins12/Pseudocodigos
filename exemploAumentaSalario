// algoritmo que recebe o nome e o salario do funcionario, e mostra o valor do reajuste \
algoritmo aumentoFuncionario 
inicio 
	literal nome
	real salario, reajuste 
	inteiro i
	para (i=1;i <= 10; i++){
		escreva ("Digite o seu nome: ")
		leia (nome)
		escreva ("Digite o seu salario: ")
		leia (salario)
		se (salario <= 1.500){ 
		reajuste = salario * 1,10
		escreva ("O reajuste de "+ nome +" é " + reajuste)
		} senão {
			se (salario <= 3.000) {
			reajuste = salario * 1,02
			escreva ("O reajuste de "+ nome +" é " + reajuste)
			} senão {
				escreva ("O funcionario não tem direito a reajuste)
			}
			
		}
	}
fim 
